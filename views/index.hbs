<div id="home">
    <div id="homepage_bot">
        <iframe id="botkit_client" src="/chat.html"></iframe>
    </div>

    <div id="welcome">
        <h2>Gridbot menu</h2>

        {{#if bot.botkit_studio_id}}
        <p><a href="https://studio.botkit.ai/app/bots/{{bot.botkit_studio_id}}">Access my dashboard</a></p>
        {{else}}
        <p>
            <a href="https://studio.botkit.ai/">Sign up for Botkit Studio</a>
            to enable my cloud features like collaborative dialog editing, analytics,
            training tools.
        </p>
        {{/if}}
        <p><a href="/chat.html">Make me full screen</a></p>
        <p><a href="/embed">Embed me in a web site</a></p>
        <p><a href="https://github.com/howdyai/botkit-starter-web">Botkit Documentation</a></p>
        <p><a href="http://botkit.groovehq.com/help_center">Help Center</a></p>
    </div>
</div>
